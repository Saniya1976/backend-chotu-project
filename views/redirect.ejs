<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration Successful </title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            overflow-x: hidden;
        }

        .success-container {
            min-height: 80vh;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            padding: 20px;
        }

        .success-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 32px;
            padding: 60px 40px;
            text-align: center;
            max-width: 500px;
            width: 100%;
            box-shadow: 0 30px 60px rgba(0, 0, 0, 0.15);
            border: 1px solid rgba(255, 255, 255, 0.3);
            position: relative;
            z-index: 10;
            opacity: 0;
            transform: translateY(50px) scale(0.95);
            animation: slideUp 0.8s ease-out forwards;
        }

        @keyframes slideUp {
            to {
                opacity: 1;
                transform: translateY(0) scale(1);
            }
        }

        .success-icon {
            position: relative;
            display: inline-block;
            margin-bottom: 32px;
            opacity: 0;
            transform: scale(0.5);
            animation: iconAppear 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55) 0.3s forwards;
        }

        @keyframes iconAppear {
            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        .check-circle {
            width: 80px;
            height: 80px;
            background: #28a745;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 40px;
            font-weight: bold;
            position: relative;
        }

        .check-circle::before {
            content: '‚úì';
        }

        .success-ripple {
            position: absolute;
            top: 50%;
            left: 50%;
            width: 120px;
            height: 120px;
            border: 2px solid #28a745;
            border-radius: 50%;
            transform: translate(-50%, -50%) scale(0);
            opacity: 0;
            animation: ripple 2s infinite;
        }

        .success-ripple:nth-child(2) {
            animation-delay: 0.5s;
        }

        .success-ripple:nth-child(3) {
            animation-delay: 1s;
        }

        @keyframes ripple {
            0% {
                transform: translate(-50%, -50%) scale(0);
                opacity: 1;
            }
            100% {
                transform: translate(-50%, -50%) scale(1.5);
                opacity: 0;
            }
        }

        .success-content {
            margin-bottom: 40px;
            opacity: 0;
            transform: translateY(20px);
            animation: contentAppear 0.6s ease-out 0.6s forwards;
        }

        @keyframes contentAppear {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .success-content h1 {
            font-size: 32px;
            font-weight: 700;
            color: #333;
            margin-bottom: 16px;
            background: linear-gradient(135deg, #e60023, #bd081c);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .success-message {
            font-size: 18px;
            color: #666;
            margin-bottom: 12px;
            line-height: 1.5;
        }

        .user-email {
            font-size: 16px;
            color: #888;
            padding: 12px 20px;
            background: rgba(230, 0, 35, 0.05);
            border-radius: 12px;
            border: 1px solid rgba(230, 0, 35, 0.1);
        }

        .user-email strong {
            color: #e60023;
        }

        .success-features {
            margin-bottom: 40px;
            opacity: 0;
            transform: translateY(20px);
            animation: featuresAppear 0.6s ease-out 0.8s forwards;
        }

        @keyframes featuresAppear {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .feature-item {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
            margin-bottom: 16px;
            padding: 12px 20px;
            background: rgba(255, 255, 255, 0.6);
            border-radius: 16px;
            border: 1px solid rgba(255, 255, 255, 0.3);
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .feature-item:hover {
            background: rgba(255, 255, 255, 0.8);
            transform: translateY(-2px);
        }

        .feature-icon {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, #e60023, #bd081c);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 12px rgba(230, 0, 35, 0.3);
            font-size: 18px;
        }

        .feature-item span {
            font-size: 16px;
            color: #555;
            font-weight: 500;
        }

        .success-actions {
            display: flex;
            flex-direction: column;
            gap: 16px;
            margin-bottom: 32px;
            opacity: 0;
            transform: translateY(20px);
            animation: actionsAppear 0.6s ease-out 1.1s forwards;
        }

        @keyframes actionsAppear {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .primary-button {
            width: 100%;
            padding: 16px 24px;
            background: linear-gradient(135deg, #e60023, #bd081c);
            color: white;
            border: none;
            border-radius: 16px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            transition: all 0.3s ease;
            box-shadow: 0 8px 20px rgba(230, 0, 35, 0.3);
        }

        .primary-button:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 28px rgba(230, 0, 35, 0.4);
        }

        .primary-button:active {
            transform: translateY(-1px);
        }

        .secondary-button {
            width: 100%;
            padding: 14px 24px;
            background: rgba(255, 255, 255, 0.8);
            color: #333;
            border: 2px solid rgba(230, 0, 35, 0.2);
            border-radius: 16px;
            font-size: 16px;
            font-weight: 500;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            transition: all 0.3s ease;
        }

        .secondary-button:hover {
            background: rgba(230, 0, 35, 0.05);
            border-color: rgba(230, 0, 35, 0.3);
            transform: translateY(-2px);
        }

        .success-footer {
            opacity: 0;
            transform: translateY(20px);
            animation: footerAppear 0.6s ease-out 1.3s forwards;
        }

        @keyframes footerAppear {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .success-footer p {
            color: #666;
            font-size: 14px;
            margin-bottom: 12px;
        }

        .link-button {
            background: none;
            border: none;
            color: #e60023;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 8px 12px;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

        .link-button:hover {
            background: rgba(230, 0, 35, 0.1);
            transform: translateY(-1px);
        }

        .success-background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 1;
        }

        .floating-element {
            position: absolute;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
            animation: float 8s ease-in-out infinite;
        }

        .element-1 {
            width: 60px;
            height: 60px;
            top: 15%;
            left: 10%;
            animation-delay: 0s;
        }

        .element-2 {
            width: 80px;
            height: 80px;
            top: 25%;
            right: 15%;
            animation-delay: 2s;
        }

        .element-3 {
            width: 40px;
            height: 40px;
            bottom: 35%;
            left: 20%;
            animation-delay: 4s;
        }

        .element-4 {
            width: 100px;
            height: 100px;
            bottom: 20%;
            right: 10%;
            animation-delay: 1s;
        }

        .element-5 {
            width: 70px;
            height: 70px;
            top: 60%;
            left: 50%;
            animation-delay: 3s;
        }

        @keyframes float {
            0%, 100% {
                transform: translateY(0px) rotate(0deg);
                opacity: 0.3;
            }
            50% {
                transform: translateY(-30px) rotate(180deg);
                opacity: 0.7;
            }
        }

        .arrow-right {
            width: 20px;
            height: 20px;
            display: inline-block;
        }

        .arrow-right::before {
            content: '‚Üí';
            font-size: 20px;
        }

        .user-icon::before {
            content: 'üë§';
            font-size: 18px;
        }

        .home-icon::before {
            content: 'üè†';
            font-size: 16px;
        }

        @media (max-width: 600px) {
            .success-card {
                padding: 40px 24px;
                margin: 16px;
            }
            
            .success-content h1 {
                font-size: 28px;
            }
            
            .success-actions {
                gap: 12px;
            }
            
            .feature-item {
                padding: 10px 16px;
            }
        }

        @media (max-width: 480px) {
            .success-card {
                padding: 32px 20px;
            }
            
            .success-content h1 {
                font-size: 24px;
            }
            
            .success-message {
                font-size: 16px;
            }
            
            .primary-button,
            .secondary-button {
                padding: 14px 20px;
                font-size: 15px;
            }
        }
    </style>
</head>
<body>
    <div class="success-container">
        <div class="success-card">
            <div class="success-icon">
                <div class="check-circle"></div>
                <div class="success-ripple"></div>
                <div class="success-ripple"></div>
                <div class="success-ripple"></div>
            </div>

            <div class="success-content">
                <h1>Welcome To Pinterest!</h1>
                <p class="success-message">
                    Your account has been created successfully
                </p>
              
            </div>

            <div class="success-features">
                <div class="feature-item">
                    <div class="feature-icon">üìå</div>
                    <span>Discover millions of ideas</span>
                </div>
                <div class="feature-item">
                    <div class="feature-icon">üí°</div>
                    <span>Create inspiring boards</span>
                </div>
                <div class="feature-item">
                    <div class="feature-icon">‚ù§Ô∏è</div>
                    <span>Save what you love</span>
                </div>
            </div>

            <div class="success-actions">
                <button class="primary-button" onclick="startExploring()">
                    <span>Start Exploring</span>
                    <span class="arrow-right"></span>
                </button>
                <button class="secondary-button" onclick="completeProfile()">
                    <span class="user-icon"></span>
                    <span>Complete Profile</span>
                </button>
            </div>

            <div class="success-footer">
                <p>Ready to discover your next favorite idea?</p>
                <button class="link-button" onclick="goToHomepage()">
                    <span class="home-icon"></span>
                    Go to Homepage
                </button>
            </div>
        </div>

        <div class="success-background">
            <div class="floating-element element-1"></div>
            <div class="floating-element element-2"></div>
            <div class="floating-element element-3"></div>
            <div class="floating-element element-4"></div>
            <div class="floating-element element-5"></div>
        </div>
    </div>

    <script>
        // Get user email from URL parameters or localStorage
       

        // Set user email on page load
        document.addEventListener('DOMContentLoaded', function() {
            const userEmail = getUserEmail();
            document.getElementById('userEmail').textContent = userEmail;
            
            // Add some interactive effects
            addInteractiveEffects();
        });

        // Button click handlers
        function startExploring() {
            console.log('Starting exploration...');
            // Add a nice click effect
            showClickEffect('Redirecting to Pinterest feed...');
            
            // Simulate redirect after animation
            setTimeout(() => {
                // In a real app, this would redirect to the main Pinterest feed
                window.location.href = 'index.html';
            }, 1000);
        }

        function completeProfile() {
            console.log('Completing profile...');
            showClickEffect('Opening profile setup...');
            
            setTimeout(() => {
                window.location.href = 'index.html';
            }, 1000);
        }

        function goToHomepage() {
            console.log('Going to homepage...');
            showClickEffect('Going to homepage...');
            
            setTimeout(() => {
                // In a real app, this would redirect to homepage
                window.location.href = 'index.html'; // or your main page
            }, 1000);
        }

        // Show click effect
        function showClickEffect(message) {
            // Create temporary message
            const messageDiv = document.createElement('div');
            messageDiv.textContent = message;
            messageDiv.style.cssText = `
                position: fixed;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                background: rgba(230, 0, 35, 0.9);
                color: white;
                padding: 12px 24px;
                border-radius: 8px;
                font-weight: 600;
                z-index: 1000;
                animation: fadeInOut 2s ease-out forwards;
            `;
            
            // Add fadeInOut animation
            const style = document.createElement('style');
            style.textContent = `
                @keyframes fadeInOut {
                    0% { opacity: 0; transform: translate(-50%, -50%) scale(0.8); }
                    20% { opacity: 1; transform: translate(-50%, -50%) scale(1); }
                    80% { opacity: 1; transform: translate(-50%, -50%) scale(1); }
                    100% { opacity: 0; transform: translate(-50%, -50%) scale(0.8); }
                }
            `;
            document.head.appendChild(style);
            document.body.appendChild(messageDiv);
            
            // Remove after animation
            setTimeout(() => {
                document.body.removeChild(messageDiv);
                document.head.removeChild(style);
            }, 2000);
        }

        // Add interactive effects
        function addInteractiveEffects() {
            // Add hover effects to feature items
            const featureItems = document.querySelectorAll('.feature-item');
            featureItems.forEach(item => {
                item.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-3px) scale(1.02)';
                });
                
                item.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0) scale(1)';
                });
            });

            // Add click effects to buttons
            const buttons = document.querySelectorAll('button');
            buttons.forEach(button => {
                button.addEventListener('click', function(e) {
                    // Create ripple effect
                    const ripple = document.createElement('span');
                    const rect = this.getBoundingClientRect();
                    const size = Math.max(rect.width, rect.height);
                    const x = e.clientX - rect.left - size / 2;
                    const y = e.clientY - rect.top - size / 2;
                    
                    ripple.style.cssText = `
                        position: absolute;
                        width: ${size}px;
                        height: ${size}px;
                        left: ${x}px;
                        top: ${y}px;
                        background: rgba(255, 255, 255, 0.3);
                        border-radius: 50%;
                        transform: scale(0);
                        animation: buttonRipple 0.6s ease-out;
                        pointer-events: none;
                    `;
                    
                    this.style.position = 'relative';
                    this.style.overflow = 'hidden';
                    this.appendChild(ripple);
                    
                    // Add ripple animation
                    const rippleStyle = document.createElement('style');
                    rippleStyle.textContent = `
                        @keyframes buttonRipple {
                            to {
                                transform: scale(2);
                                opacity: 0;
                            }
                        }
                    `;
                    document.head.appendChild(rippleStyle);
                    
                    setTimeout(() => {
                        ripple.remove();
                        rippleStyle.remove();
                    }, 600);
                });
            });
        }

        // Add some sparkle effects
        function createSparkle() {
            const sparkle = document.createElement('div');
            sparkle.style.cssText = `
                position: fixed;
                width: 4px;
                height: 4px;
                background: #e60023;
                border-radius: 50%;
                pointer-events: none;
                z-index: 1000;
                animation: sparkleAnimation 2s ease-out forwards;
            `;
            
            sparkle.style.left = Math.random() * window.innerWidth + 'px';
            sparkle.style.top = Math.random() * window.innerHeight + 'px';
            
            const sparkleStyle = document.createElement('style');
            sparkleStyle.textContent = `
                @keyframes sparkleAnimation {
                    0% {
                        opacity: 1;
                        transform: scale(0) rotate(0deg);
                    }
                    50% {
                        opacity: 1;
                        transform: scale(1) rotate(180deg);
                    }
                    100% {
                        opacity: 0;
                        transform: scale(0) rotate(360deg);
                    }
                }
            `;
            
            document.head.appendChild(sparkleStyle);
            document.body.appendChild(sparkle);
            
            setTimeout(() => {
                sparkle.remove();
                sparkleStyle.remove();
            }, 2000);
        }

        // Create sparkles periodically
        setInterval(createSparkle, 3000);
    </script>
</body>
